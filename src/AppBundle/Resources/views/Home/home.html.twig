{% extends 'AppBundle::layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12 text-center">
            <h1>Purl.</h1>
            <p class="lead">Purl (Petite URL) is an open source project with the goal of<br> providing you with your own private URL shortener!</p>
            <form class="form-home">
                    <div class="form-group">
                        <label class="sr-only" for="url">URL to shorten</label>
                        <input type="url" class="form-control input-lg" id="url" placeholder="http(s)://example.com">
                    </div>
                <button type="submit" class="btn btn-primary btn-lg">Shorten URL</button>
            </form>
        </div>
    </div>
    <!-- /.row -->
{% endblock %}